@using PetStore.Services.Models.Product
@model IEnumerable<ListAllProductsServiceModel>

@{
    ViewData["Title"] = "All Products";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="container mb-2">
            <h1 class ="col-md-4 mb-2">@ViewData["Title"]</h1>
            <form method="post" class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="searchQuery">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </div>
    <div class=" container justify-content-between">
        <a class="btn btn-primary" asp-controller="Products" asp-action="All" asp-route-order="ascending">Ascending</a>
        <a class="btn btn-primary" asp-controller="Products" asp-action="All" asp-route-order="descending">Descending</a>
    </div>
    <div class="container mt-2">
        <div class="row">
            <div class="col-12 col-sm-8 col-lg-5">
                <ul class="list-group">
                    @foreach (var product in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @product.Name - @(product.Price.ToString("f2"))$
                            <div class="image-parent">
                                <img src="@product.ImageURL" class="img-fluid" alt="quixote">
                            </div>
                            <a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Details</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

